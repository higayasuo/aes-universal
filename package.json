{
  "name": "expo-aes-universal",
  "version": "0.1.0",
  "description": "Universal AES encryption/decryption library for Expo applications that works on both web and native platforms",
  "private": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build",
    "pack-local": "npm run build && npm pack"
  },
  "keywords": [
    "expo",
    "crypto",
    "web",
    "universal",
    "encryption",
    "decryption",
    "aes",
    "hmac"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "expo-crypto-universal": "^0.2.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "node-forge": "^1.3.1"
  }
}
